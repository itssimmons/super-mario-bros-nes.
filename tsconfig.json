{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2020",
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [ "src/*" ],
      "~Assets/*": [ "Assets/*" ],
      "~Tools/*": [ "Tools/*" ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "Declarations"
    ],
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules/"
  ]
}
